<div class="comment-main-level">
    <!-- -->

    <div class="comment-box">
        <div class="comment-head">
            {{#each this.userCom}}
            {{!-- <div class="comment-avatar"><img src="/assets/images/user/{this.avatar}" alt=""></div> --}}
            <h6 class="comment-name by-author"> {{this.prenom}} {{{maskNom this.nom}}}</h6>
            {{/each}}
            <span>{{{formatDateCom this.date}}} (Le {{{formatDate this.date "DD MMMM YYYY Ã  HH:mm"}}})</span>
            {{#if @root.user}}
            <i class="bi bi-heart"></i>
            <i class="bi bi-exclamation-octagon"></i>
            <i class="bi bi-reply-fill"></i>
            {{/if}}

        </div>
        <div class="comment-content">
            <div class="d-flex col-12">
                {{>article/form}}
            </div>
            {{this.content}}
        </div>
    </div>
</div>