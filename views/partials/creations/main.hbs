<section style="background-color: #f6f9fe;">
    <div class="container">

        <div class="section-title">
            <h3><span>Mes Cr√©ations</span></h3>
        </div>
        
        <div class="row" style="background-color: #f6f9fe;" data-aos="fade-right">
            {{!-- Permet d'obtenir tout mes items afin de les afficher --}}
            {{#each creationsItem }}

            <div class="my-5 col-xs-12 col-xm-12 col-md-6 col-lg-4 d-flex justify-content-center"
                data-aos="zoom-out-down" data-aos-delay="{{this.id}}0">

                <div class="card" style="width: 22rem;">
                    <a href="/creations/{{ this.id }}">
                        <div
                            style="background-image: url('/assets/images/creations/{{ this.img }}'); background-size: cover; background-position:center;">
                            <p style="height: 250px;"></p>
                        </div>
                    </a>
                    <div class="card-body">
                        <p class="card-text">{{ this.desc }}</p>
                        <p class="card-text"><i>Fait le : {{ this.date }}</i></p>
                    </div>
                </div>

            </div>
            {{/each }}
        </div>


        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            {{#iffpage page.current 1}}
                            {{else}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{page.previous}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {{/iffpage}}

                            {{#iffpage page.next undefined}}
                            <li class="page-item"><a class="page-link" href="?page={{page.previousbis}}">{{page.previousbis}}</a></li>
                            {{/iffpage}}

                            {{#iffpage page.current 1}}
                            {{else}}
                            <li class="page-item"><a class="page-link" href="?page={{page.previous}}">{{page.previous}}</a></li>
                            {{/iffpage}}

                            <li class="page-item active" aria-current="page"><a style="color:white!important" class="page-link" href="?page={{page.current}}">{{page.current}}</a></li>
                            {{#iffpage page.next undefined}}
                            {{else}}
                            <li class="page-item"><a class="page-link" href="?page={{page.next}}">{{page.next}}</a></li>
                            {{/iffpage}}

                             {{#iffpage page.current 1}}
                            <li class="page-item"><a class="page-link" href="?page={{page.nextbis}}">{{page.nextbis}}</a></li>
                            {{/iffpage}}

                            {{#iffpage page.next undefined}}
                            {{else}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{page.next}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            {{/iffpage}}
                        </ul>
                    </nav>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>
</section>