<section style="background-color: #f6f9fe;">
    <div class="container">

        <div class="section-title">
            <h3><span>Mes Créations</span></h3>
        </div>

        <div class="row" style="background-color: #f6f9fe;" data-aos="fade-right">
            {{!-- Permet d'obtenir tout mes items afin de les afficher --}}
            {{#each creationsItem }}
            {{#if isDelete}}
            {{else}}
            <div class="my-5 col-xs-12 col-xm-12 col-md-6 col-lg-4 d-flex justify-content-center"
                data-aos="zoom-out-down" data-aos-delay="{{this.id}}0">

                <div class="card" style="width: 22rem;">
                    <a href="/creations/{{ this.id }}">
                        <div
                            style="background-image: url('/assets/images/creations/{{ this.img_url }}'); background-size: cover; background-position:center;">
                            <p style="height: 250px;"></p>
                        </div>
                    </a>
                    <div class="card-body">
                        <p class="card-text">{{ this.desc }}</p>
                        <p class="card-text"><i>Réaliser le : {{{formatDate this.date "DD MMMM YYYY"}}}</i></p>
                    </div>
                </div>

            </div>
            {{/if}}
            {{/each }}
        </div>


        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <nav aria-label="Page navigation example">
                        {{> creations/paginations}}
                    </nav>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>
</section>