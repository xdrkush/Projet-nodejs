<form action="/profil/edit/{{userLog.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="modal fade" id="modalEditUser" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2"
        tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel2">Edition de votre profil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="col-12">
                        <label name="prenom" for="text2" class="form-label">Votre Pr√©nom</label>
                        <div class="col-12">
                            <input type="text" class="form-control" id="text1" value="{{userLog.prenom}}">
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="text2" class="form-label">Votre Nom</label>
                        <div class="col-12">
                            <input name="nom" type="text" class="form-control" id="text2" value="{{userLog.nom}}">
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="registerInput" class="form-label">Votre Email</label>
                        <div class="col-12">
                            <input name="email" type="email" class="form-control" id="registerInput" value="{{userLog.email}}">
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="registerInput" class="form-label">Votre image de profil</label>
                        <div class="col-12">
                            <input type="file" name="avatar"/>
                        </div>
                    </div>
                </div>

                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Confirmer</button>
                </div>

            </div>
        </div>
    </div>

</form>