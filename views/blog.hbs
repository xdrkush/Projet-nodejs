{{!-- Page blog --}}
<div class="container">
    <div class="row">
        {{!-- Permet d'obtenir tout mes items afin de les afficher --}}
        {{#each blogitem}}
        <div class="my-5 col-xs-12 col-xm-12 col-md-6 col-lg-3 d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <img src="{{this.img}}"
                    class="card-img-top" alt="{{this.alt}}">
                <div class="card-body">
                    <p class="card-text">{{this.desc}}</p>
                    <p>
                        <a href="article.html" type="button" class="btn btn-outline-secondary">{{this.link_title}}</a>
                    </p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>